<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8899FA"
    tools:context=".Pages.EntertainmentActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_id_game"
            android:layout_width="82dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:background="@color/white"
            app:srcCompat="?attr/homeAsUpIndicator" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="159dp"
            android:text="TIC TAC TOE"
            android:textAlignment="center"
            android:textSize="50dp" />

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView40"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="114dp"
            android:layout_marginEnd="19dp"
            android:columnCount="3"
            android:padding="15dp"
            android:rowCount="3">

            <!-- Define buttons for the Tic Tac Toe grid with the TicTacToeButton style -->
            <Button
                android:id="@+id/button1"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />

            <Button
                android:id="@+id/button2"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />

            <Button
                android:id="@+id/button3"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />

            <Button
                android:id="@+id/button4"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />

            <Button
                android:id="@+id/button5"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />

            <Button
                android:id="@+id/button6"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />

            <Button
                android:id="@+id/button7"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />

            <Button
                android:id="@+id/button8"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />

            <Button
                android:id="@+id/button9"
                style="@style/TicTacToeButton"
                android:textSize="54sp" />
        </GridLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
